{
  "env": { "mocha": true },
  "rules": {
    "no-console": "off",
    "no-invalid-this": "off",
    "max-len": ["error", {
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true,
      "ignoreComments": true
    }]
  },
  "globals": {
    "MockInteractions": true,
    "chai": true,
    "sinon": true,
    "flush": true,
    "expect": true,
    "assert": false,
    "fixture": false,
    "WCT": false,
    "replace": true,
    "stub": true
  }
}
